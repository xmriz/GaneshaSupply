// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id              Int          @id @default(autoincrement())
  name            String
  price           Int
  description     String       @map(name: "description")
  stock           Int          @default(0)
  lastRestock     DateTime     @default(now()) @map(name: "last_restock")
  productExisting AllProducts?
}

model AllProducts {
  id               Int         @id @default(autoincrement())
  lastRestock      DateTime    @default(now()) @map(name: "last_restock")
  salesLastRestock Int         @default(0) @map(name: "sales_last_restock")
  Orderline        Orderline[]
  product          Product     @relation(fields: [productId], references: [id])
  productId        Int         @unique
}

model Orderline {
  id        Int         @id @default(autoincrement())
  quantity  Int
  product   AllProducts @relation(fields: [productId], references: [id])
  productId Int
  order     Order       @relation(fields: [orderId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  orderId   Int
}

model Order {
  id         Int         @id @default(autoincrement())
  timestamp  DateTime    @default(now())
  total      Int
  orderlines Orderline[]
}
